    <section class="Formulaire">
        <form class="form-horizontal" action="{{ path('contact') }}" method="post"  {{ form_enctype(form) }} id="contact_form">
        {{ form_start(form) }}
            <fieldset> <!-- Cadre du formulaire -->
                <div id="Centre">
                    <label for="pseudo" class="Espace">Nom <span class="Important">*</span></label>
                  {{ form_widget(form.nom) }}
                    <label for="e-mail" class="Espace">Mail <span class="Important">*</span></label>
                    {{ form_widget(form.email) }}
                    <label for="Objet" class="Espace">Objet <span class="Important">*</span></label>
                    {{ form_widget(form.objet) }}
                    <label for="categorie" class="Espace">Cat√©gorie <span class="Important">*</span></label>
                    <select name="categorie" id="Categorie">
                        <option value="france">France</option>
                        <option value="espagne">Espagne</option>
                        <option value="italie">Italie</option>
                    </select>
                    <label for="Message" class="Espace">Message <span class="Important">*</span></label>
                    {{ form_widget(form.message) }}
                    <input type="submit" value="Envoyer mon message" id="Envoyer"> <!-- Bouton envoyer -->
                    <p><span class="Important">*</span> = Champs obligatoires </p>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </form>
    </section>

